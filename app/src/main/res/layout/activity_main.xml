<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background_media"
    tools:context="megaminds.findmedicine.MainActivity">


   

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    </LinearLayout>

    <megaminds.findmedicine.buttoneffects.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rippleColor="@color/material_grey_300"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/line1"
        android:layout_alignEnd="@+id/line1"
        android:layout_marginBottom="57dp">



        <Button
            android:id="@+id/abt"
            style="@style/ButtonStyle.RaisedEmpty"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="@string/about"
            />

    </megaminds.findmedicine.buttoneffects.MaterialRippleLayout>

    <megaminds.findmedicine.buttoneffects.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rippleColor="@color/main_color_grey_300"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/line1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">



        <Button
            android:id="@+id/src"
            style="@style/ButtonStyle.RaisedEmpty"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:background="@color/colorPrimary"
            android:text="@string/serch"
            android:textColor="@color/white"
            />

    </megaminds.findmedicine.buttoneffects.MaterialRippleLayout>


</RelativeLayout>
