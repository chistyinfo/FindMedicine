<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_media"
    tools:context="megaminds.demo.SingleActivity">

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/pic1" />



        <megaminds.findmedicine.font.RobotoTextView
            android:id="@+id/search_text"
            style="@style/TextViewAppearance.Headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Napa"
            android:textColor="@color/material_purple_900"
            android:textSize="30dp"
            app:typeface="robotoRegular"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

                <megaminds.findmedicine.font.FontelloTextView
                style="@style/TextViewAppearance.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group:"
                android:textAlignment="center"
                android:textColor="@color/material_grey_900"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perapirol"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/material_blue_500"
                android:textSize="25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <megaminds.findmedicine.font.FontelloTextView
                style="@style/TextViewAppearance.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:textAlignment="center"
                android:textColor="@color/material_grey_900"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="105mg"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/material_blue_500"
                android:textSize="25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <megaminds.findmedicine.font.FontelloTextView
                style="@style/TextViewAppearance.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Made by:"
                android:textAlignment="center"
                android:textColor="@color/material_grey_900"
                android:textSize="25dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SKF"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/material_blue_500"
                android:textSize="25dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>






   </LinearLayout>

</RelativeLayout>
